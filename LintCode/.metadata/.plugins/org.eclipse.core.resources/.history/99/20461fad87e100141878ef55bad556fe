package LintCode;

import java.util.ArrayList;
import java.util.Arrays;

public class Chapter9 {
    public int partitionArray(ArrayList<Integer> nums, int k) {
	    //write your code here
	    if(nums.size() == 0){
	        return 0;
	    }
	    int start = 0;//start pointer
	    int end = nums.size() - 1;//end pointer
	    while(start < end){
	        while(nums.get(start) < k){
	            start ++;
	            if(start == nums.size()){
	            	return nums.size();
	            }
	        }
	        while(nums.get(end) > k){
	            end--;
	        }
	        if(start <= end){
	        	swap(nums,start,end);
	        	start++;
	        	end--;
	        }
	    }
	    System.out.println(nums.toString());
	    return end;
    }
    
    public void swap(ArrayList<Integer> nums, int start, int end){
        int temp = nums.get(start);
        nums.set(start,nums.get(end));
        nums.set(end,temp);
    }
    public static void main(String[] args){
    	Chapter9 cp9 = new Chapter9();
    	ArrayList<Integer> nums = new ArrayList<Integer>(Arrays.asList(1,2,3));
    	System.out.println(nums.toString());
    	//System.out.println(cp9.partitionArray(nums,4));
    }
    
}
