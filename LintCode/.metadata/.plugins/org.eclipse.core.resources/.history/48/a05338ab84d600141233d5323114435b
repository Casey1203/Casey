package LintCode;

import java.util.ArrayList;

public class Chapter5 {
    public int minimumTotal(ArrayList<ArrayList<Integer>> triangle) {
        // write your code here
        //initialization f[0][0]
        int rowNum = triangle.size();
        int[][] f = new int[rowNum][rowNum];
        for(int i = 0; i < rowNum; i ++ ){//initialization of state set
            for(int j = 0; i < rowNum; j ++){
                f[i][j] = Integer.MAX_VALUE;
            }
        }
        searchState(0,0,0);
        int answer = Integer.MAX_VALUE;
        for(int i = 0; i < rowNum; i++){
            answer = Math.min(answer,f[rowNum][i]);
        }
        return answer;
        
    }
    
    public int searchState(int x, int y, ArrayList<ArrayList<Integer>> triangle, int[][] f){
        if(x >= triangle.size()){
            return 0;
        }
        f[x+1][y] = Math.min(f[x][y],searchState(x+1,y,triangle, f),f[x][y]);
        f[x+1][y] = Math.min(f[x][y],searchState(x+1,y+1,triangle, f),f[x][y]);
        
    }
    
}
